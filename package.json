{
  "name": "beratrax",
  "version": "0.0.0",
  "description": "A DeFi platform that your friends can actually use.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BeraTrax/beratrax-frontend.git"
  },
  "keywords": [
    "DeFi",
    "blockchain",
    "cryptocurrency",
    "DApp",
    "Berachain",
    "Yield",
    "High",
    "APY",
    "Beratrax"
  ],
  "author": "beratrax-dev",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "start:web": "turbo run start --filter=@beratrax/website",
    "build:web": "turbo run build --filter=@beratrax/website",
    "start:mobile": "turbo run start:mobile --filter=mobile",
    "build:mobile": "turbo run build:mobile --filter=mobile",
    "build:ui": "turbo run build:ui --filter=@beratrax/ui",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types"
  },
  "devDependencies": {
    "prettier": "^3.5.0",
    "turbo": "^1.10.4",
    "typescript": "5.7.3"
  },
  "workspaces": [
    "./apps/*",
    "./packages/*"
  ],
  "engines": {
    "node": "=22.10.0"
  },
  "packageManager": "yarn@3.4.1",
  "bugs": {
    "url": "https://github.com/BeraTrax/beratrax-frontend/issues"
  },
  "homepage": "https://github.com/BeraTrax/beratrax-frontend#readme"
}
