{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": ["dom", "esnext"],
    "strict": true,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "baseUrl": ".",

    // DONT DO THIS so jsdoc will remain
    "removeComments": false,
    "skipLibCheck": true,
    "sourceMap": false,
    "strictNullChecks": true,
    "types": ["node"],
    "paths": {
      "@beratrax/ui/*": ["packages/ui/*"],
      "@beratrax/web/*": ["apps/web/*"],
      "@beratrax/mobile/*": ["apps/mobile/*"],
      "web/src/*": ["apps/web/src/*"],
    }
  },
  "exclude": ["_", "node_modules", "dist", "build", "**/*.test.ts"]
}