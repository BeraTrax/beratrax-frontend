{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "prepare": {
      "inputs": [
        "package.json"
      ]
    },
    "build": {
      "inputs": [
        "yarn.lock",
        "**/package.json",
        "src/**.ts",
        "src/**.tsx"
      ],
      "outputs": [
        "**/dist/**",
        "./apps/next/.next/**",
        "**/types/**"
      ],
      "dependsOn": [
        "^build"
      ]
    },
    "start": {
      "cache": false,
      "persistent": true,
      "dependsOn": [
        "prepare"
      ]
    },
    "lint": {
      "dependsOn": ["^lint"],
      "outputs": []
    },
    "check-types": {
      "dependsOn": ["^check-types"],
      "outputs": []
    }
  }
}