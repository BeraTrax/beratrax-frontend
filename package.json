{
  "name": "beratrax",
  "version": "0.0.0",
  "description": "A DeFi platform that your friends can actually use.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BeraTrax/beratrax-frontend.git"
  },
  "keywords": [
    "DeFi",
    "blockchain",
    "cryptocurrency",
    "DApp",
    "Berachain",
    "Yield",
    "High",
    "APY",
    "Beratrax"
  ],
  "author": "beratrax-dev",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "start:web": "turbo run start --filter=@beratrax/website",
    "build:web": "turbo run build --filter=@beratrax/website",
    "start:mobile": "turbo run start:mobile --filter=@beratrax/mobile",
    "build:mobile": "turbo run build:mobile --filter=@beratrax/mobile",
    "build:ui": "turbo run build:ui --filter=@beratrax/ui",
    "build:core": "turbo run build:core --filter=@beratrax/core",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "postinstall": "patch-package"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "prettier": "^3.2.5",
    "turbo": "^1.10.4"
  },
  "workspaces": [
    "./apps/*",
    "./packages/*"
  ],
  "bugs": {
    "url": "https://github.com/BeraTrax/beratrax-frontend/issues"
  },
  "homepage": "https://github.com/BeraTrax/beratrax-frontend#readme",
  "packageManager": "yarn@1.22.22"
}

